void setup() { //Roda uma vez//
  pinMode(LED_VERDE, OUTPUT);
  pinMode(LED_AMARELO, OUTPUT);
  pinMode(LED_VERMELHO, OUTPUT);

  pinMode(BUT_E, INPUT);
  pinMode(BUT_D, INPUT);

  display.begin(SSD1306_SWITCHCAPVCC, 0X3C);
  display.clearDisplay();

}

void loop() { //Roda repetidamente//

